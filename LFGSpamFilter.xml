<Ui
    xmlns="http://www.blizzard.com/wow/ui/"
    xmlns:xsi="http://www.w3.org/1001/XMLSchema-instance"
    xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\FrameXML\UI.xsd"
>
    <Button frameStrata="TOOLTIP" name="LFGSpamFilterQuickReportButton" inherits="UIPanelCloseButtonNoScripts" hidden="true">
        <Scripts>
            <OnClick>
                LFGSpamFilterAddon.ui.quickReport.onClick()
                self:Hide()
            </OnClick>
            <OnLeave>
                self:Hide()
            </OnLeave>
        </Scripts>
    </Button>

    <Button name="LFGSpamFilterStatusButton" registerForClicks="LeftButtonUp,RightButtonUp" hidden="true">
        <Size x="32" y="32"/>
        <Layers>
            <Layer textureSubLevel="5">
                <Texture parentKey="Icon">
                    <Size x="24" y="24"/>
                    <Anchors>
                        <Anchor point="CENTER" x="-1" y="0"/>
                    </Anchors>
                </Texture>
            </Layer>
            <Layer textureSubLevel="6">
                <Texture parentKey="TextFrame" file="Interface\Buttons\UI-Quickslot">
                    <Size x="20" y="20"/>
                    <Anchors>
                        <Anchor point="CENTER" x="8" y="-8"/>
                    </Anchors>
                </Texture>
            </Layer>
            <Layer textureSubLevel="7">
                <FontString parentKey="Text" inherits="GameFontNormalSmall" text="0">
                    <Size>
                        <AbsDimension x="0" y="0"/>
                    </Size>
                    <Anchors>
                        <Anchor point="CENTER" x="8" y="-8"/>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
        <NormalTexture file="Interface\Buttons\UI-SquareButton-Up"/>
        <PushedTexture file="Interface\Buttons\UI-SquareButton-Down"/>
        <DisabledTexture file="Interface\Buttons\UI-SquareButton-Disabled"/>
        <HighlightTexture file="Interface\Buttons\UI-Common-MouseHilight" alphaMode="ADD"/>
        <Scripts>
            <OnEnter>
                GameTooltip:SetOwner(self, 'ANCHOR_RIGHT')
                GameTooltip:SetText(self.tooltip)
            </OnEnter>
            <OnClick>
                LFGSpamFilterAddon.ui.statusButton.onClick(button)
                GameTooltip_Hide()
            </OnClick>
            <OnLeave function="GameTooltip_Hide"/>
        </Scripts>
    </Button>

    <Frame name="LFGSpamFilterCheckboxTemplate" inherits="OptionsCheckButtonTemplate" virtual="true">
        <Size x="24" y="24"/>
        <Scripts>
            <OnClick><!-- noop --></OnClick>
        </Scripts>
    </Frame>

    <Frame name="LFGSpamFilterOptions" parent="UIParent" enableMouse="true" hidden="true" frameStrata="DIALOG" inherits="TooltipBackdropTemplate">
        <Size x="192" y="307"/>
        <Anchors>
            <Anchor point="TOPLEFT" relativePoint="BOTTOMLEFT" relativeTo="LFGSpamFilterStatusButton" x="0" y="1"/>
        </Anchors>
        <KeyValues>
            <KeyValue key="updating" value="false" type="boolean"/>
            <KeyValue key="backdropColor" value="BLACK_FONT_COLOR" type="global"/>
            <KeyValue key="backdropColorAlpha" value="0.9" type="number"/>
            <KeyValue key="backdropBorderColor" value="TOOLTIP_DEFAULT_COLOR" type="global"/>
        </KeyValues>
        <Scripts>
            <OnShow>
                LFGSpamFilterAddon.ui.options.load()
            </OnShow>
            <OnHide>
                LFGSpamFilterAddon.ui.options.apply()
            </OnHide>
        </Scripts>
        <Layers>
            <Layer>
                <FontString inherits="GameFontHighlightSmall" wordwrap="false" justifyH="RIGHT" text="filter this category">
                    <Size x="0" y="10"/>
                    <Anchors>
                        <Anchor point="TOPLEFT" relativePoint="TOPLEFT" x="37" y="-16"/>
                    </Anchors>
                </FontString>
                <FontString inherits="GameFontHighlightSmall" wordwrap="false" justifyH="RIGHT" text="Group filters">
                    <Size>
                        <AbsDimension x="0" y="10"/>
                    </Size>
                    <Anchors>
                        <Anchor point="TOPLEFT" relativePoint="TOPLEFT" x="18" y="-40"/>
                    </Anchors>
                </FontString>
                <FontString inherits="GameFontHighlightSmall" wordwrap="false" justifyH="RIGHT" text="voice chat (usually spam)">
                    <Size x="0" y="10"/>
                    <Anchors>
                        <Anchor point="TOPLEFT" relativePoint="TOPLEFT" x="47" y="-60"/>
                    </Anchors>
                </FontString>
                <FontString inherits="GameFontHighlightSmall" wordwrap="false" justifyH="RIGHT" text="hours max group age">
                    <Size x="0" y="10"/>
                    <Anchors>
                        <Anchor point="TOPLEFT" relativePoint="TOPLEFT" x="57" y="-82"/>
                    </Anchors>
                </FontString>
                <FontString inherits="GameFontHighlightSmall" wordwrap="false" justifyH="RIGHT" text="Options">
                    <Size>
                        <AbsDimension x="0" y="10"/>
                    </Size>
                    <Anchors>
                        <Anchor point="TOPLEFT" relativePoint="TOPLEFT" x="18" y="-108"/>
                    </Anchors>
                </FontString>
                <FontString inherits="GameFontHighlightSmall" wordwrap="false" justifyH="RIGHT" text="report as spam">
                    <Size x="0" y="10"/>
                    <Anchors>
                        <Anchor point="TOPLEFT" relativePoint="TOPLEFT" x="47" y="-128"/>
                    </Anchors>
                </FontString>
                <FontString inherits="GameFontHighlightSmall" wordwrap="false" justifyH="RIGHT" text="show quick-report button">
                    <Size x="0" y="10"/>
                    <Anchors>
                        <Anchor point="TOPLEFT" relativePoint="TOPLEFT" x="47" y="-150"/>
                    </Anchors>
                </FontString>
                <FontString inherits="GameFontHighlightSmall" wordwrap="false" justifyH="RIGHT" text="fix duplicate applications">
                    <Size x="0" y="10"/>
                    <Anchors>
                        <Anchor point="TOPLEFT" relativePoint="TOPLEFT" x="47" y="-172"/>
                    </Anchors>
                </FontString>
                <FontString parentKey="BannedPlayersHeading" inherits="GameFontHighlightSmall" wordwrap="false" justifyH="RIGHT">
                    <Size>
                        <AbsDimension x="0" y="10"/>
                    </Size>
                    <Anchors>
                        <Anchor point="TOPLEFT" relativePoint="TOPLEFT" x="18" y="-198"/>
                    </Anchors>
                </FontString>
                <FontString inherits="GameFontHighlightSmall" wordwrap="false" justifyH="RIGHT" text="filter banned players">
                    <Size x="0" y="10"/>
                    <Anchors>
                        <Anchor point="TOPLEFT" relativePoint="TOPLEFT" x="47" y="-218"/>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
        <Frames>
            <CheckButton parentKey="FilterCategory" inherits="LFGSpamFilterCheckboxTemplate">
                <Anchors>
                    <Anchor point="TOPLEFT" relativePoint="TOPLEFT" x="12" y="-10"/>
                </Anchors>
            </CheckButton>
            <CheckButton parentKey="NoVoice" inherits="LFGSpamFilterCheckboxTemplate">
                <Anchors>
                    <Anchor point="TOPLEFT" relativePoint="TOPLEFT" x="22" y="-54"/>
                </Anchors>
            </CheckButton>
            <EditBox parentKey="MaxAge" inherits="InputBoxTemplate" autoFocus="false" letters="3">
                <Size>
                    <AbsDimension x="25" y="20"/>
                </Size>
                <Anchors>
                    <Anchor point="TOPLEFT" relativePoint="TOPLEFT" x="29" y="-76"/>
                </Anchors>
                <Scripts>
                    <OnEscapePressed>
                        self:ClearFocus()
                    </OnEscapePressed>
                    <OnEnterPressed>
                        self:ClearFocus()
                    </OnEnterPressed>
                </Scripts>
                <TextInsets>
                    <AbsInset left="-1.5" right="-1.5"/>
                </TextInsets>
            </EditBox>
            <CheckButton parentKey="Report" inherits="LFGSpamFilterCheckboxTemplate">
                <Anchors>
                    <Anchor point="TOPLEFT" relativePoint="TOPLEFT" x="22" y="-122"/>
                </Anchors>
            </CheckButton>
            <CheckButton parentKey="QuickReport" inherits="LFGSpamFilterCheckboxTemplate">
                <Anchors>
                    <Anchor point="TOPLEFT" relativePoint="TOPLEFT" x="22" y="-144"/>
                </Anchors>
            </CheckButton>
            <CheckButton parentKey="FilterApplications" inherits="LFGSpamFilterCheckboxTemplate">
                <Anchors>
                    <Anchor point="TOPLEFT" relativePoint="TOPLEFT" x="22" y="-166"/>
                </Anchors>
            </CheckButton>
            <CheckButton parentKey="FilterBanned" inherits="LFGSpamFilterCheckboxTemplate">
                <Anchors>
                    <Anchor point="TOPLEFT" relativePoint="TOPLEFT" x="22" y="-212"/>
                </Anchors>
            </CheckButton>
            <Button parentKey="UnbanAll" inherits="UIPanelButtonGrayTemplate" text="Unban all">
                <Size x="73" y="20"/>
                <Anchors>
                    <Anchor point="TOPLEFT" relativePoint="TOPLEFT" x="22" y="-238"/>
                </Anchors>
                <Scripts>
                    <OnClick>
                        LFGSpamFilterAddon.ui.options.onUnbanAllClick()
                    </OnClick>
                </Scripts>
                <NormalFont style="GameFontNormalSmall"/>
                <HighlightFont style="GameFontHighlightSmall"/>
                <DisabledFont style="GameFontDisableSmall"/>
            </Button>
            <Button parentKey="UnbanLast" inherits="UIPanelButtonGrayTemplate" text="Unban last">
                <Size x="73" y="20"/>
                <Anchors>
                    <Anchor point="TOPLEFT" relativePoint="TOPLEFT" x="100" y="-238"/>
                </Anchors>
                <Scripts>
                    <OnClick>
                        LFGSpamFilterAddon.ui.options.onUnbanLastClick()
                    </OnClick>
                </Scripts>
                <NormalFont style="GameFontNormalSmall"/>
                <HighlightFont style="GameFontHighlightSmall"/>
                <DisabledFont style="GameFontDisableSmall"/>
            </Button>
            <Button parentKey="OkButton" inherits="UIPanelButtonNoTooltipTemplate" text="OK">
                <Size x="151" y="20"/>
                <Anchors>
                    <Anchor point="TOPLEFT" relativePoint="TOPLEFT" x="22" y="-272"/>
                </Anchors>
                <Scripts>
                    <OnClick>
                        LFGSpamFilterOptions:Hide()
                    </OnClick>
                </Scripts>
                <NormalFont style="GameFontNormalSmall"/>
                <HighlightFont style="GameFontHighlightSmall"/>
                <DisabledFont style="GameFontDisableSmall"/>
            </Button>
        </Frames>
    </Frame>
</Ui>
